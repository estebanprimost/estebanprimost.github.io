---
import { Icon } from 'astro-icon'

import Tag from './Tag.astro'
import Link from './Link.astro'


export interface Props {
	title: string;
	subtitle?: string;
  link?: string;
  tags?: string[];
}

const { title, subtitle, link, tags = [] } = Astro.props;
---

<div class='mb-8'>
  <Link
    href={link}
    title={title}
    element='h3'
    className='mt-0'
  >
    {title}
  </Link>

  <div class={`flex items-center space-x-2 opacity-80`}>
    <Icon name='tabler:calendar' className='inline-block align-middle w-5' />
    <span class={`text-sm`}>{subtitle}</span>
  </div>

  <p class='mt-2 mb-2'>
    <slot />
    {
      tags.map(tag => <Tag name={tag} />)
    }
  </p>
</div>

